<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include("partials/header") %>
    

    <section class="hero">
    <div class="hero-text">
      <h1>Experience <br> the wilderness</h1>
      <p>Join group tours or customize your dream safari</p>
      <div class="buttons">
        <a href="/tours" class="btn green">View all tours</a>
        <a href="/custom-tour" class="btn white">Customize your tour</a>
      </div>
    </div>

    <div class="video-wrapper">
      <video autoplay muted loop playsinline class="background-video">
        <source src="/videos/herovideo.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
      <!-- Text overlay is a transparent PNG image -->
      <!-- <img src="/images/tiger-text-overlay.png" alt="Overlay" class="overlay-image" /> -->
    </div>
  </section>


  <section class="partners-section">
    <h2>Our Partners</h2>
  <div class="logo-slider">
    <div class="logo-track">
      <!-- Repeat logos to ensure smooth loop -->
      <img src="/images/logos/logo png02.png" alt="Partner 1" />
      <img src="/images/logos/logo png03.png" alt="Partner 2" />
      <img src="/images/logos/logo png04.png" alt="Partner 3" />
      <img src="/images/logos/logo png05.png" alt="Partner 4" />

      <!-- Duplicate for seamless scroll -->
      <img src="/images/logos/logo png02.png" alt="Partner 1" />
      <img src="/images/logos/logo png03.png" alt="Partner 2" />
      <img src="/images/logos/logo png04.png" alt="Partner 3" />
      <img src="/images/logos/logo png05.png" alt="Partner 4" />

    </div>
  </div>
    </section>

    <section class="featured-tours">
    <h2>Featured Tours for You</h2>

    <div class="cards">
      <!-- Card 1 -->
      <div class="card">
        <img src="/images/cardsimg/img3.png" alt="Pench National Park" />
        <div class="card-content">
          <h3>Pench National Park</h3>
          <p class="date">Date : 15 May, 2025</p>
          <p class="offer">50% OFF</p>
          <p class="limited">Limited Time Offer</p>
          <p class="price">
            ₹ 17900 <span class="original">₹ 25500</span>
          </p>
          <p class="per-person">per person</p>
          <button>View Now</button>
        </div>
        <div class="icon"><i class="fa-regular fa-heart"></i></div>
      </div>

      <!-- Card 2 -->
      <div class="card highlight">
        <img src="/images/cardsimg/img2.png" alt="Kanha National Park" />
        <div class="card-content">
          <h3>Kanha National Park</h3>
          <p class="date">Date : 15 May, 2025</p>
          <p class="offer">50% OFF</p>
          <p class="limited">Limited Time Offer</p>
          <p class="price">
            ₹ 18900 <span class="original">₹ 25500</span>
          </p>
          <p class="per-person">per person</p>
          <button>View Now</button>
        </div>
        <div class="icon red"><i class="fa-solid fa-heart"></i></div>
      </div>

      <!-- Card 3 -->
      <div class="card">
        <img src="/images/cardsimg/img1.png" alt="Tadoba National Park" />
        <div class="card-content">
          <h3>Tadoba National Park</h3>
          <p class="date">Date : 15 May, 2025</p>
          <p class="offer">50% OFF</p>
          <p class="limited">Limited Time Offer</p>
          <p class="price">
            ₹ 17900 <span class="original">₹ 25500</span>
          </p>
          <p class="per-person">per person</p>
          <button>View Now</button>
        </div>
        <div class="icon red"><i class="fa-solid fa-heart"></i></div>
      </div>
    </div>

    <div class="view-all">
      <a href="#">View All Tours</a>
    </div>
  </section>
    


    <!-- <%- include("partials/footer") %> -->

</body>
</html>
